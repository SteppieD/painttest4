FROM mcr.microsoft.com/playwright:v1.40.0-focal

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Install Playwright browsers
RUN npx playwright install --with-deps

# Copy test files
COPY . .

# Set environment
ENV NODE_ENV=test

# Keep container running for interactive testing
CMD ["tail", "-f", "/dev/null"]